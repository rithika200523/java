package day8;

public class problem2 {

	public static void main(String[] args) {
		        String str = "RITHIKA";
		        String result = "";

		        for (int i = 0; i < str.length(); i++) {
		            char ch = str.charAt(i);

		            if (ch >= 'A' && ch <= 'Z') {
		                ch = (char)(ch + 32);
		            }

		            result += ch;
		        }

		        System.out.println("Lowercase: " + result);
		     }
		
		
	}


